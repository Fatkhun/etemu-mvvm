<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/v_span"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_32sdp"
        app:cardBackgroundColor="@color/d_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:text="Filter Barang"
        android:textAppearance="@style/title_large"
        android:textColor="@color/b_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_span" />

    <TextView
        android:id="@+id/tvReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:text="Reset"
        android:gravity="end"
        android:textAppearance="@style/title_large"
        android:textColor="@color/s_75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@id/v_span" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btn_request"
        app:layout_constraintTop_toBottomOf="@id/title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_18sdp">

            <TextView
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:text="Status Barang"
                android:textAppearance="@style/subtitle_medium"
                android:textColor="@color/b_100"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rgStatusBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@id/info1">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatusOpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Open"
                    android:textAppearance="@style/body_medium"
                    android:textColor="@color/b_100" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatusComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Complete"
                    android:textAppearance="@style/body_medium"
                    android:textColor="@color/b_100" />
            </RadioGroup>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:background="@color/d_100"
                app:layout_constraintTop_toBottomOf="@+id/rgStatusBarang" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lytTipebarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/view2">

                <TextView
                    android:id="@+id/info3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:text="Tipe Barang"
                    android:textAppearance="@style/subtitle_medium"
                    android:textColor="@color/b_100"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioGroup
                    android:id="@+id/rgTipeBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    app:layout_constraintTop_toBottomOf="@id/info3">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbLost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lost (Hilang)"
                        android:textAppearance="@style/body_medium"
                        android:textColor="@color/b_100" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbFound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Found (Temuan)"
                        android:textAppearance="@style/body_medium"
                        android:textColor="@color/b_100" />
                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:background="@color/d_100"
                app:layout_constraintTop_toBottomOf="@+id/lytTipebarang" />

            <TextView
                android:id="@+id/info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:text="Hanya tampilkan barang berdasarkan..."
                android:textAppearance="@style/subtitle_medium"
                android:textColor="@color/b_100"
                app:layout_constraintTop_toBottomOf="@id/view1" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_9sdp"
                app:chipSpacingHorizontal="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@+id/info2"
                app:singleSelection="true"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_request"
        style="@style/Big.MaterialButton.Primary"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_12sdp"
        android:text="Tampilkan Hasil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nested_filter" />

</androidx.constraintlayout.widget.ConstraintLayout>