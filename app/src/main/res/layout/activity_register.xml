<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/line_btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_16sdp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_next"
            style="@style/Big.MaterialButton.Primary"
            android:layout_width="match_parent"
            android:enabled="false"
            android:text="Lanjutkan" />
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/b_0"
        android:paddingVertical="@dimen/_11sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_weight="0"
                android:src="@drawable/ic_arrow_back_24"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/tvTitleToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="@style/body_medium"
                android:textColor="@color/b_100"
                tools:text="Daftar" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line_btn_next"
        android:layout_below="@+id/tb_register">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_12sdp">

                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lengkapi data untuk menyelesaikan pendaftaran"
                    android:textAppearance="@style/subtitle_large"
                    android:textColor="@color/b_100" />

                <TextView
                    android:id="@+id/tv_register_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/app_text_register_name"
                    android:textAppearance="@style/subtitle_small"
                    android:textColor="@color/b_100" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_name"
                    style="@style/CustomOutlineBoxV1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:boxStrokeColor="@color/box_input_stroke_color"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan nama lengkap"
                        android:inputType="textCapWords|textPersonName"
                        android:maxLength="100"
                        android:paddingStart="@dimen/_9sdp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/body_medium"
                        android:textColor="@color/b_100"
                        android:textColorHint="@color/b_25" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_error_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Isi nama lengkap dulu, yaa."
                    android:textAppearance="@style/body_mini"
                    android:textColor="@color/p_50"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/app_text_register_email"
                    android:textAppearance="@style/subtitle_small"
                    android:textColor="@color/b_100" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pastikan email yang anda gunakan valid"
                    android:textAppearance="@style/body_mini"
                    android:textColor="@color/b_75" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_email"
                        style="@style/CustomOutlineBoxV1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/box_input_stroke_color"
                        app:endIconMode="clear_text"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Masukkan email anda"
                            android:inputType="textEmailAddress"
                            android:paddingStart="@dimen/_9sdp"
                            android:paddingTop="@dimen/_14sdp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="@dimen/_14sdp"
                            android:textAppearance="@style/body_medium"
                            android:textColor="@color/b_100"
                            android:textColorHint="@color/b_25" />

                    </com.google.android.material.textfield.TextInputLayout>

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_error_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="email anda tidak valid"
                    android:textAppearance="@style/body_mini"
                    android:textColor="@color/p_50"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_register_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/app_text_register_pass"
                    android:textAppearance="@style/subtitle_small"
                    android:textColor="@color/b_100" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_password"
                        style="@style/CustomOutlineBoxV1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/box_input_stroke_color"
                        app:endIconMode="password_toggle"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Masukkan password anda"
                            android:inputType="textPassword"
                            android:maxLength="8"
                            android:paddingStart="@dimen/_9sdp"
                            android:paddingEnd="0dp"
                            android:textAppearance="@style/body_medium"
                            android:textColor="@color/b_100"
                            android:textColorHint="@color/b_25" />

                    </com.google.android.material.textfield.TextInputLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_error_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Isi password dulu, yaa."
                    android:textAppearance="@style/body_mini"
                    android:textColor="@color/p_50"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</RelativeLayout>