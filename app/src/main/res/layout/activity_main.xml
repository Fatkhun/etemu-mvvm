<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Gambar Header -->
    <ImageView
        android:id="@+id/header_main_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/ic_pixeltrue_seo"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        android:contentDescription="Header Illustration"/>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/lineSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/header_main_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_search_bar_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_28sdp"
            app:cardElevation="@dimen/_3sdp"
            app:strokeColor="@color/d_100"
            app:strokeWidth="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_44sdp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_16sdp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Apa yang sedang kamu cari?"
                        android:layout_marginVertical="@dimen/_8sdp"
                        android:textAppearance="@style/body_medium"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/b_50"
                        android:background="@null"/>

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_weight="0"
                        android:src="@drawable/ic_search_filled"
                        app:tint="@color/b_50"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="Search Icon"
                        android:layout_marginStart="@dimen/_8sdp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:contentDescription="filter"
            android:layout_marginEnd="@dimen/_12sdp"
            app:maxImageSize="@dimen/_24sdp"
            app:backgroundTint="@color/b_0"
            android:layout_gravity="center_vertical"
            app:elevation="@dimen/_3sdp"
            android:src="@drawable/ic_rounded_equal_24"
            app:tint="@color/b_50"
            app:fabSize="normal"/>
    </LinearLayout>

    <!-- Konten Scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/lineSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_completed_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/component_lost_found"
                tools:itemCount="3"
                android:paddingHorizontal="@dimen/_12sdp"
                android:clipToPadding="false"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:src="@drawable/ic_rounded_add_24"
        app:backgroundTint="@color/s_75"
        app:tint="@color/b_0"
        app:fabSize="normal"
        app:maxImageSize="@dimen/_24sdp"
        app:elevation="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Tambah Item Baru"/>
</androidx.constraintlayout.widget.ConstraintLayout>
