<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_order_active"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_12sdp"
    android:paddingVertical="@dimen/_9sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/cv1"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="@dimen/_58sdp"
                android:background="@color/d_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/cv2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="top"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:background="@color/d_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv1"
                app:layout_constraintTop_toTopOf="@id/cv1" />

            <View
                android:id="@+id/cv3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/d_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv1"
                app:layout_constraintTop_toBottomOf="@id/cv2" />

            <View
                android:id="@+id/cv4"
                android:layout_width="@dimen/_158sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/d_100"
                app:layout_constraintBottom_toBottomOf="@id/cv1"
                app:layout_constraintStart_toEndOf="@id/cv1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>