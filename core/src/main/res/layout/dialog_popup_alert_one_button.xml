<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_alert"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="206dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_26sdp"
        android:src="@drawable/ic_ilus_general_warning" />

    <TextView
        android:id="@+id/tv_title_alert"
        android:textAppearance="@style/subtitle_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:text="Perhatian"
        android:textColor="@color/b_100"/>

    <TextView
        android:id="@+id/tv_subtitle_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_8sdp"
        android:textAppearance="@style/body_medium"
        android:textColor="@color/b_50"
        tools:text="Parsing error" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_18sdp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_btn_cek_lagi"
            style="@style/Big.MaterialButton.Primary.Outline"
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_weight="1"
            android:text="Cek lagi"
            android:textAppearance="@style/subtitle_medium"
            android:textAllCaps="false"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_confirm_alert"
            style="@style/Big.MaterialButton.Primary"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_weight="1"
            android:textAppearance="@style/subtitle_medium"
            android:textAllCaps="false"
            android:text="Lanjutkan" />
    </LinearLayout>
</LinearLayout>